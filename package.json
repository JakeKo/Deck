{
	"name": "deck",
	"version": "1.0.0",
	"description": "An open source, well-armed, safe-to-swallow, and fluoride-free application for editing and presenting slide decks",
	"author": "Jacob Koperski",
	"license": "MIT",
	"homepage": "https://github.com/JakeKo/Deck#readme",
	"bugs": "https://github.com/JakeKo/Deck/issues",
	"repository": "git+https://github.com/JakeKo/Deck.git",
	"scripts": {
		"test": "cross-env NODE_ENV=development nyc mocha-webpack --webpack-config webpack-test.config.js --require test/setup.js test/**/*.spec.js",
		"serve": "cross-env NODE_ENV=development webpack-dev-server --config webpack-dev.config.js --hot --inline"
	},
	"nyc": {
		"include": [
			"src/**/*.(js|vue)"
		],
		"instrument": false,
		"sourceMap": false
	},
	"babel": {
		"env": {
			"development": {
				"plugins": [
					"istanbul"
				]
			}
		}
	},
	"eslintConfig": {
		"env": {
			"es6": true,
			"browser": true,
			"node": true
		},
		"rules": {
			"semi": [
				"error",
				"always"
			],
			"quotes": [
				"error",
				"double"
			],
			"no-var": "error"
		}
	},
	"eslintIgnore": [
		"/dist",
		"/node_modules"
	],
	"devDependencies": {
		"@types/jquery": "^3.3.4",
		"@vue/test-utils": "^1.0.0-beta.20",
		"babel-core": "^6.26.3",
		"babel-loader": "^7.1.4",
		"babel-plugin-istanbul": "^4.1.6",
		"cross-env": "^5.2.0",
		"css-loader": "^0.28.11",
		"eslint": "^5.0.1",
		"expect": "^23.2.0",
		"jsdom": "^11.11.0",
		"jsdom-global": "^3.0.2",
		"mocha": "^5.2.0",
		"mocha-webpack": "^1.1.0",
		"node-sass": "^4.9.1",
		"nyc": "^12.0.2",
		"sass-loader": "^7.0.3",
		"svg.js": "^2.6.6",
		"ts-loader": "^4.4.2",
		"tslint": "^5.10.0",
		"tslint-loader": "^3.6.0",
		"typescript": "^2.7.2",
		"vue": "^2.5.16",
		"vue-class-component": "^6.2.0",
		"vue-loader": "^15.2.4",
		"vue-property-decorator": "^7.0.0",
		"vue-router": "^3.0.1",
		"vue-style-loader": "^4.1.0",
		"vue-template-compiler": "^2.5.16",
		"vuex": "^3.0.1",
		"webpack": "^4.12.2",
		"webpack-cli": "^3.0.8",
		"webpack-dev-server": "^3.1.4",
		"webpack-node-externals": "^1.7.2"
	},
	"dependencies": {}
}
